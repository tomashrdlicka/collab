{
  "name": "@collab/server",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsup src/index.ts --format esm --external drizzle-orm",
    "start": "node dist/index.js",
    "test": "vitest run",
    "test:watch": "vitest",
