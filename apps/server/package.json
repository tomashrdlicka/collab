    "@hocuspocus/extension-database": "^2.11.0",
    "@anthropic-ai/sdk": "^0.20.0",
    "yjs": "^13.6.11",
    "ioredis": "^5.3.2",
    "dotenv": "^16.4.1",
    "nanoid": "^5.0.4"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "tsup": "^8.0.1",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  }
}
